[github]
	user = andhapp
[alias]
  a = add
  t = tag
  au = add -u
  ap = add -p
  bl = blame
  sb = show-branch
  st = status
  ci = commit
  cim = commit --message
  cAim = commit -A --message
  caim = commit -a --message
  br = branch
  co = checkout
  cp = cherry-pick
  ds = diff --stat

  df = diff
  dc = diff --cached
  pl = pull
  ph = push
  lg = log -p
  rmc = rm -r --cached .
  logf = log --pretty=oneline --grep
  logh = log --follow -p
  logg = log --graph --decorate --pretty=oneline --abbrev-commit
  logga = log --graph --decorate --pretty=oneline --abbrev-commit --all
  logb = log --pretty=oneline --abbrev-commit --branches=*
  ls = ls-files
  w = whatchanged

  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard
[apply]
	whitespace = nowarn
[core]
	excludesfile = ~/.gitignore_global
	editor = /usr/bin/vim
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow 
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color "sh"]
	branch = yellow reverse
	workdir = blue bold
  dirty = red
[push]
	default = tracking
